include ../../components/logo/logo
include ../../components/room-search/room-search
include ../../components/calendar/calendar
include ../../components/room-thumbnail/room-thumbnail
include ../../components/sign-in/sign-in
include ../../components/sign-up/sign-up
include ../../components/room-book/room-book
doctype html
html
    head
        meta(charset="utf-8")
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(name='description' content=metaDescription || 'change me' )
        meta(name='keywords' content=metaKeywords || 'change me' )
        link(rel='apple-touch-icon' sizes='180x180' href='favicons/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='favicons/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='favicons/favicon-16x16.png')
        link(rel='manifest' href='favicons/site.webmanifest')
        link(rel='mask-icon' href='favicons/safari-pinned-tab.svg' color='#5bbad5')
        meta(name='msapplication-TileColor' content='#da532c')
        title Официальный сайт отеля Toxin | UI Kit - Cards
    body
        .cards
            nav.cards__nav
                +logo
            .cards__main
                .cards__grid-column
                    article.cards__card
                        +room-search()
                    article.cards__card
                        +sign-up()
                .cards__grid-column
                    article.cards__card
                        +room-book()
                    article.cards__card
                        +sign-in()
                .cards__grid-column
                    article.cards__card
                        +calendar({theme: 'inline'})
                    article.cards__card.cards__card_type_room-thumbnail
                        +room-thumbnail({
                            roomNumber: 888,
                            pricePerDay: 9990,
                            feedbackCounter: 145,
                            rate: 5,
                            image: {
                                src: require('./img/room-888.jpg'),
                                alt: 'Room 888'
                            },
                            feature: 'люкс',
                            hover: true
                        })
                    article.cards__card.cards__card_type_room-thumbnail
                            +room-thumbnail({
                                roomNumber: 840,
                                pricePerDay: 9990,
                                feedbackCounter: 65,
                                rate: 4,
                                image: {
                                    src: require('./img/room-840.jpg'),
                                    alt: 'Room 840'
                                }
                            })